#!/bin/bash

set -e

if [ $# -ge 1 ]; then

window_size_str=$(xrandr | grep '*')
prev_ifs=$IFS
IFS=' '
set -- $window_size_str
IFS=$prev_ifs
window_size_str=$1
window_width=${window_size_str%x*}
window_height=${window_size_str#*x}



else
  printf "Usage: clients-run <num-clients> <max-num-cols>\n" >&2
fi


